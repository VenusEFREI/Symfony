{% extends 'base.html.twig' %}

{% block title %}Modifier les tâches{% endblock %}

{% block body %}

    <div class="container mt-4">
    <h1 style="text-align:center">Modifier les tâches</h1>
        <h1>Tableau de bord</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
        

        <tbody>
                {% for property in properties %}
                    <tr>
                        <td>{{ property.titre }}</td>
                        <td>
                            <a href="{{ path('property_edit', {'id': property.id}) }}" class="btn btn-primary">Editer</a>
                            <form method="post" action="{{ path('property_delete', {'id': property.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline-block">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>

                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6">Pas de tâches</td>
                    </tr>
        
                {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('property_new') }}" class="btn btn-primary">Créer une nouvelle tache</a>
        </div>
    </div>
{% endblock %}


       